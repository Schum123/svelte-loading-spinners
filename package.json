{
	"name": "svelte-loading-spinners",
	"version": "0.3.6",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/schum123/svelte-loading-spinners.git"
	},
	"bugs": {
		"url": "https://github.com/schum123/svelte-loading-spinners/issues"
	},
	"homepage": "https://github.com/schum123/svelte-loading-spinners#readme",
	"description": "Loading spinners using the svelte framework.",
	"license": "MIT",
	"author": "Eric Schumertl",
	"keywords": [
		"svelte"
	],
	"exports": {
		"./package.json": "./package.json",
		"./types/spinner.type": "./dist/types/spinner.type.js",
		"./utils": "./dist/utils.js",
		"./*.svelte": "./dist/*.svelte",
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package && npx publint",
		"package": "svelte-kit sync && svelte-package",
		"prepack": "npm run build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . --plugin prettier-plugin-svelte && eslint .",
		"format": "prettier --write . --plugin prettier-plugin-svelte"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/package": "^2.3.0",
		"@types/node": "^20.11.20",
		"@typescript-eslint/eslint-plugin": "^7.5.0",
		"@typescript-eslint/parser": "^7.5.0",
		"@jill64/eslint-config-svelte": "1.2.13",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.9",
		"tslib": "^2.6.2",
		"typescript": "^4.7.4",
		"vite": "^5.2.7",
		"@sveltejs/vite-plugin-svelte": "^3.0.2"
	},
	"type": "module"
}
